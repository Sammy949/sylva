{
  "manifest_version": 3,
  "name": "Sylva - Minimalist Notepad",
  "version": "1.0.0",
  "description": "A minimalist notepad that lives in your Chrome sidebar",
  "permissions": [
    "sidePanel",
    "storage"
  ],
  "action": {
    "default_title": "Open Sylva Notepad",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}